package tests;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.powermock.modules.junit4.PowerMockRunner;

import commands.Undo;
import commands.Redo;
import editor.Enregistreur;
import editor.HistoryManager;
import engine.EditionEngine;
import recordables.InsTexteEnregistrable;

@RunWith(PowerMockRunner.class)
public class TestsIntegrationv3 {

	private EditionEngine engine;
	private GUITest gui;
	private Enregistreur enregistreur;
	private HistoryManager gestionnaire;
	
	@Before
	public void setUp() throws Exception {
		
		engine = new EditionEngine();
		enregistreur = new Enregistreur();
		gestionnaire = new HistoryManager();
		engine.setHistorique(gestionnaire);
		gui = new GUITest();
		engine.getBuffer().ajouterObservateur(gui);
	}

	@Test
	public void test() {

		//On ajoute du texte et on revient en arrière
		new InsTexteEnregistrable(engine, enregistreur, "Test").executer();
		new Undo(engine).executer();
		assertEquals("", gui.getDerniereInsert());
		
		//On revient à l'insertion
		new Redo(engine).executer();
		assertEquals("Test", gui.getDerniereInsert());
		
		//On tente de faire un Redo après une insertion, ce qui est impossible
		new Undo(engine).executer();
		new InsTexteEnregistrable(engine, enregistreur, "a").executer();
		new Redo(engine).executer();
		assertEquals("a", gui.getDerniereInsert());
	}
}
