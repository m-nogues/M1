package engine;

/**
 * The clipboard saves a string and gives it on demand.
 */
public final class Clipboard {
	/** the content. */
	private String content;

	/**
	 * Instantiate a Clipboard with an empty content.
	 */
	public Clipboard() {
		content = "";
	}

	/**
	 * Get the content.
	 *
	 * @return the content
	 */
	public final String getContent() {
		return new String(content);
	}

	/**
	 * Checks if the clipboard is empty.
	 *
	 * @return true, if is empty
	 */
	public boolean isEmpty() {
		return content.isEmpty();
	}

	/**
	 * Change le content du presse-papier.
	 *
	 * @param chaine
	 *            Le nouveau content du presse-papier
	 */
	public final void setContent(String chaine) {
		/* Préconditions */
		if (chaine == null)
			throw new IllegalArgumentException("Chaine est à null");
		// On crée une nouvelle instance de string pour assurer l'int�grit� de
		// nos données
		content = new String(chaine);
	}
}